.modal.fade.bd-example-modal-lg.modal-bug aria-hidden="true" aria-labelledby="bug" role="dialog" tabindex="-1"
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Report a Bug
        button.close aria-label="Close" data-dismiss="modal" type="button"
          span aria-hidden="true"  &times;
      .modal-body
        form.form-bug
          .row
            .col-sm-6
              .form-group
                label for=""  Name
                input.form-control placeholder="John Doe" type="text" /
            .col-sm-6
              .form-group
                label for=""  Email address (optional)
                input.form-control placeholder=("Enter email") type="email" /
          .form-group
            label for=""  Describe the issue
            textarea.form-control placeholder=("Description...") form="form-bug" rows="5" </textarea>
      .modal-footer
        button.btn.btn-secondary data-dismiss="modal" type="button"  Close
        button.btn.btn-primary type="button"  Submit
