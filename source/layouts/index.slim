- content_box_file = '../_partials/_content_main.slim'
- no_breadcrumbs = true
- full_screen = false
- show_onboarding = false

- custom_menu_settings = Hash.new
- custom_menu_settings['layout'] = 'full'
- custom_menu_settings['color_scheme'] = 'dark'
- custom_menu_settings['color_style'] = 'bright'
- custom_menu_settings['sub_menu_style'] = 'flyout'
- custom_menu_settings['show_settings_in_menu'] = false
- custom_menu_settings['show_messages_in_menu'] = false
- custom_menu_settings['show_notifications_in_menu'] = false
- custom_menu_settings['show_search_in_menu'] = false
- custom_menu_settings['show_user_in_menu'] = false

- custom_top_bar_settings = Hash.new
- custom_top_bar_settings['color_scheme'] = 'transparent'
- custom_top_bar_settings['show_user_info'] = false
- custom_top_bar_settings['show_messages'] = false
- custom_top_bar_settings['show_search'] = false

include ../_partials/_template.slim
